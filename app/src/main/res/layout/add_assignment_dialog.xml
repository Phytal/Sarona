<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Category"
            android:textAppearance="@style/TextAppearance.Sarona.Subtitle2"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@id/category_spinner"
            app:layout_constraintEnd_toStartOf="@+id/category_spinner"
            app:layout_constraintTop_toTopOf="@id/category_spinner" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:text="Assignment Name"
            android:textAppearance="@style/TextAppearance.Sarona.Subtitle2"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/input_assignment_name"
            app:layout_constraintEnd_toStartOf="@+id/input_assignment_name"
            app:layout_constraintTop_toTopOf="@+id/input_assignment_name" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:paddingVertical="5dp"
            android:text="Score"
            android:textAppearance="@style/TextAppearance.Sarona.Subtitle2"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/input_score"
            app:layout_constraintEnd_toStartOf="@+id/input_score"
            app:layout_constraintTop_toTopOf="@+id/input_score" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Max Score"
            android:textAppearance="@style/TextAppearance.Sarona.Subtitle2"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/input_max_score"
            app:layout_constraintEnd_toStartOf="@+id/input_max_score"
            app:layout_constraintTop_toTopOf="@+id/input_max_score" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Weight"
            android:textAppearance="@style/TextAppearance.Sarona.Subtitle2"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/input_weight"
            app:layout_constraintEnd_toStartOf="@+id/input_weight"
            app:layout_constraintTop_toTopOf="@+id/input_weight" />

        <Spinner
            android:id="@+id/category_spinner"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/input_assignment_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:text="Mock Assignment"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/category_spinner" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/input_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="numberDecimal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/input_assignment_name" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/input_max_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="numberDecimal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/input_score" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/input_weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="numberDecimal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/input_max_score" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Mock Assignment"
        android:textAppearance="@style/TextAppearance.Sarona.Headline6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add"
        app:layout_constraintEnd_toEndOf="@+id/constraintLayout"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout" />


</androidx.constraintlayout.widget.ConstraintLayout>