<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="UnusedAttribute">

    <data>
        <variable
            name="assignment"
            type="com.phytal.sarona.data.db.entities.Assignment" />

        <variable
            name="listener"
            type="com.phytal.sarona.ui.assignments.AssignmentsAdapter.AssignmentAdapterListener" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/assignment_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="15dp"
        android:clickable="true"
        android:focusable="true"
        android:onClick="@{(view) -> listener.onAssignmentClick(view, assignment)}"
        android:transitionName="@{@string/assignment_card_transition_name(assignment.title_of_assignment)}"
        app:strokeWidth="1dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="3dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/text_view_grade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:fontFamily="@font/mplus"
                android:text="@string/course_item_grade"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textStyle="bold" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/text_view_max_grade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_view_grade"
                android:layout_alignParentEnd="true"
                android:fontFamily="@font/mplus"
                android:text="@string/course_item_max_grade"
                android:textStyle="bold" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/text_view_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@id/text_view_grade"
                android:ellipsize="end"
                android:fontFamily="@font/mplus"
                android:layout_marginEnd="20dp"
                android:maxLines="1"
                android:text="@string/assignment_item_title"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textStyle="bold" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/text_view_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_view_title"
                android:fontFamily="@font/mplus"
                android:text="@string/assignment_date_assigned"
                android:textStyle="bold" />
        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>